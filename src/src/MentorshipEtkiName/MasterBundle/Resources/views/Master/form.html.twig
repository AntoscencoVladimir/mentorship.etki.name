{% extends 'MentorshipMasterBundle::base.html.twig' %}
{% block body %}
  <section>
    <h2>Форма подачи заявки</h2>
    <div class="col-lg-4 col-md-6 col-sm-9">
      {{ form_start(form) }}
      {% for key in ['title', 'email',] %}
        <div class="row {{ key }}-row">
          <div class="col-sm-3">
              {{ form_label(form[key]) }}
          </div>
          <div class="col-sm-9">
            <div class="form-group">
            {{ form_widget(form[key], {attr: {class: 'form-control'}}) }}
            {{ form_errors(form[key], {attr: {class: 'alert alert-danger'}}) }}
            </div>
          </div>
        </div>
      {% endfor %}
      <div class="form-group">
        {{ form_label(form.story) }}
        {{ form_widget(form.story, {attr: {class: 'form-control', rows: 5}}) }}
        {{ form_errors(form.story, {attr: {class: 'alert alert-danger'}}) }}
      </div>
      <div class="row">
        <div class="col-sm-10">
          {{ form_label(form.is_private) }}
          {{ form_errors(form.is_private, {attr: {class: 'alert alert-danger'}}) }}
        </div>
        <div class="col-sm-2 text-right">
          <div class="form-group">
            {{ form_widget(form.is_private) }}
          </div>
        </div>
      </div>
      <div>
        {{ form_widget(form._token) }}
        {{ form_errors(form._token) }}
      </div>
      <div class="form-group">
        {{ form_label(form.save) }}
        {{ form_widget(form.save, {attr: {class: 'form-control btn btn-primary'}}) }}
      </div>
      {{ form_end(form) }}
    </div>
  </section>
{% endblock %}